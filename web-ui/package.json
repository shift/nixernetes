{
  "name": "nixernetes-ui",
  "version": "1.0.0",
  "description": "Web UI for Nixernetes infrastructure management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
